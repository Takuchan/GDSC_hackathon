<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gdscapp.SettingsPage">
    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,10, 10, 0"
            Spacing="10">
            <StackLayout>
                <Label Text="科目数"/>
                <Entry x:Name="NumInput" Placeholder="科目数を入力してください。" Keyboard="Numeric" TextChanged="OnTextChanged"/>
            </StackLayout>
            <HorizontalStackLayout Spacing="10">
                <Label Text="監視フォルダ" VerticalOptions="Center"/>
                <Button Clicked="OnClickPickFolderButton" Text="フォルダを参照"/>
                <Label x:Name="NowFolderName" VerticalOptions="Center"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>